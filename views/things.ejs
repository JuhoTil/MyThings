<%- include layouts/header.ejs %>

        <div class="page-data">
         <div class="data-btn">
           <button onClick="addThing();">+ Add</button>
         </div>
         <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th width="180px">Action</th>
                </tr>
                               
                <% if(data.length){ 
                                
                 for(var i = 0;i < data.length;i++) { %>
                 
                <tr>
                    <td><%=(i+1)%></td>
                    <td><%=data[i].name%></td>
                    <td><%=data[i].description%></td>
                    <td><%=data[i].latitude%></td>
                    <td><%=data[i].longitude%></td>
                    <td>
                        <a class="a-inside edit" href="../things/edit/<%=data[i].id%>">Edit</a>
                       
                        <a class="a-inside delete" href="../things/delete/<%=data[i].id%>">Delete</a>
                        
                        <a class="a-inside view" href="../things/map/<%=data[i].id%>">View</a>
                       
                    </td>
                </tr>
            <% }
            
             }else{ %>
                 <tr>
                    <td colspan="3">No user</td>
                 </tr>
            <% } %>
                
                              
                
            </table>
            
         </div>
        </div>
        
<%- include layouts/footer.ejs %>

